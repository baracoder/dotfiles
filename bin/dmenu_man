DMENU_ARGS=${DMENU_ARGS- -f -l 16 -p man}
DMENU_ARGS+=" $@"
MAN=${MAN:-roxterm -e man}

DMENU=${DMENU:-dmenu ${DMENU_ARGS}}

print -l /usr/share/man/man[0-9]/* |
  awk -F'/' '{section = substr($6,
                               match($6,
                                     /\.[0-9][^.]*(\.gz)?$/) + 1)
              sub(/(\.gz)$/,
                  "",
                  section)
              sub(/\.[0-9][^.]*(\.gz)?$/,
                  "",
                  $6)
              sub(/(\.bz2)$/,
                  "",
                  section)
              sub(/\.[0-9][^.]*(\.bz2)?$/,
                  "",
                  $6)
              print($6"("section")")}' |
  sort |
  ${=DMENU} |
  if read; then
    awk -F'[\\(\\)]' '{print $2" "$1}' <<< $REPLY |
    xargs ${=MAN}
  fi
