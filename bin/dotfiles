#!/bin/bash

update() {
    git diff --quiet && echo 'no changes detected' && return
    echo 'changes detected'
    git add -u .
    git commit -v
}

sync() {
    git fetch
    git rebase origin/master
    git push
    make
}

cd ~/.dotfiles || exit 1
[ "$1" = "-h"     ] && echo 'usage: dotfiles [update|sync ] ' && exit
[ "$1" = "update" ] && update && exit
[ "$1" = "sync"   ] && sync && exit
update && sync
